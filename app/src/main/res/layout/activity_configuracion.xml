<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mq08.Configuracion">

    <RelativeLayout
        style="@style/backgroundImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Configuracion">

        <TextView
            android:id="@+id/cbd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:visibility="invisible" />

        <CheckBox
            android:id="@+id/checkBoxLector"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@+id/textView22"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="55dp"
            android:background="@drawable/ic_borde4"
            android:button="@drawable/image_checkbox"
            android:foregroundGravity="center"
            android:gravity="center"
            android:textSize="1sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rest"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:text="Formato"
            android:textColor="@color/colorQuantum"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/loteurl"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_borde"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="#C3C0C0"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/desplegable"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView11"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/ic_borde"
            android:ems="10"
            android:gravity="center"
            android:hint="1"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="#C3C0C0"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/rest"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_below="@id/textView21"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="51dp"
            android:background="@drawable/ic_borde"
            android:ems="1"
            android:gravity="center"
            android:inputType="number"
            android:textColor="@color/textColor"
            android:textColorHint="#C3C0C0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sucursal"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="ESTADO"
            android:textColor="@color/colorQuantum"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sucursal"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="31dp"
            android:gravity="center"
            android:text="SERVICIO REST"
            android:textColor="@color/colorQuantum"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/srcQuantumBackground"
            android:layout_width="112dp"
            android:layout_height="124dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="17dp"
            android:visibility="visible" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/direccion"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="32dp"
            android:gravity="center"
            android:text="DEPOSITO"
            android:textColor="@color/colorQuantum"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="41dp"
            android:fontFamily="@font/roboto"
            android:text="VersiÃ³n 2.0"
            android:textColor="@color/colorQuantum"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/QTM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="9dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/colorQuantum"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/direccion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_borde"
            android:ems="10"
            android:gravity="center"
            android:hint="http:"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="#C3C0C0"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/sucursal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_borde"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="@color/textColor"
            android:textColorHint="#C3C0C0"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="URL"
            android:textColor="@color/colorQuantum"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/checkBoxLector"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_button"
            android:onClick="guardar"
            android:text="guardar"
            android:textSize="12sp"
            app:cornerRadius="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnBaseDatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:visibility="invisible"
            app:backgroundTint="@color/divider"
            app:srcCompat="@drawable/ic_baseline_dataset_24" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>